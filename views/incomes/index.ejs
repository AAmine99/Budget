<% layout('/boilerplate') %>


        <div class=" d-flex flex-column ">
            <%- include('../flash') %>

            <% if( incomes.length ==0  ){ %> 
                <h5 class="card-title">No incomes</h5> 
                <% }else{ %>
               
                <table class="table table-hover " style="max-width: 24rem;">
                    <thead>
                        <tr>
                            <th scope="col">Amount</th>
                            <th scope="col">Month</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let income of incomes){ %>
                            <tr>
                                <td>
                                    <%=income.amount %>
                                </td>
                                <td>
                                    <%=income.month+1 %>
                                </td>
                                <td>
                                    <div class="d-flex">
                                        <a class="btn btn-info me-2" href="/incomes/<%= income._id  %>/edit">
                                            <i class="fas fa-edit"></i></a>
                                        <form action="/incomes/<%= income._id  %>?_method=DELETE" method="POST">
                                            <button class=" btn btn-danger" type="submit"><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                <% } %> 

        </div>
