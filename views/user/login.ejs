<% layout('/user/userTemp')%>
<%- include('../flash') %>
<h5 class="card-title">Login</h5>
    <form action="/login" method="POST" class="validated-form" novalidate>
        <div class="mb-3">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" type="text" name="username" id="username"
                pattern="^[a-zA-Z][a-zA-Z0-9-_\.]{3,15}$" required>
            <div class="invalid-feedback">
                Must contain a least one character and no symbol.
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" name="password"
                pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,20}" id="password" required>
            <div class="invalid-feedback">
                Please enter a valid password.
            </div>
        </div>
        <button class="btn btn-success">Login</button>
    </form>
