<% layout('/boilerplate') %>


        <div class=" d-flex flex-column ">
            <%- include('../flash') %>

            <% if( expenses.length ==0  ){ %> 
                <h5 class="card-title">No expenses</h5> 
                <% }else{ %>
               
                <table class="table table-hover " style="max-width: 30rem;">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Date</th>
                            <th scope="col">Cateogry</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let ex of expenses){ %>
                            <tr>
                                <td>
                                    <%=ex.name %>
                                </td>
                                <td>
                                    <%=ex.amount %>
                                </td>
                                <td>
                                    <%= ex.date.getDate() %>/<%= ex.date.getMonth()+1 %>/<%=ex.date.getFullYear()  %>  
                                </td>
                                <td>
                                    <%=ex.category.name %>
                                </td>
                                <td>
                                    <div class="d-flex">
                                        <a class="btn btn-info me-2" href="/expenses/<%= ex._id  %>/edit">
                                            <i class="fas fa-edit"></i></a>
                                        <form action="/expenses/<%= ex._id  %>?_method=DELETE" method="POST">
                                            <button class=" btn btn-danger" type="submit"><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                <% } %> 
                <% if(pages>1){ %> 
                <nav aria-label="Page navigation ">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="/expenses/">1</a></li>
                        <% let i=2 %> 
                        <% while(pages-1>0){ %> 
                        <li class="page-item"><a class="page-link" href="/expenses/<%= i %>"><%= i %></a></li>
                        <% pages--  %>
                        <% i++ %>  
                        <% } %> 
                    </ul>
                  </nav>
                <% } %> 
        </div>
