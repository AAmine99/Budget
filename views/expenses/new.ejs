<% layout('/boilerplate') %>
    <style>
        input {
            max-width: 200px;
            min-width: 200px;
        }
    </style>

    <%- include('../flash') %>
        <% if (categories.length==0){ %>
            <h5 class="">You need to create a category first</h5>
            <% }else{ %>

                <h5 class="">Add a new Expense</h5>
                <form action="/expenses" class="d-flex flex-column validated-form" method="POST" novalidate>
                    <div class=" d-flex align-items-center my-3 ">
                        <div class="w-75">
                            <label for="eName">Name</label>
                        </div>
                        <div>
                            <input name="expense[name]" type="text" class="form-control"
                                pattern="^[a-zA-Z][a-zA-Z0-9-_\.]{3,15}$" id="eName" placeholder="Income" required>
                        </div>
                    </div>
                    <div class=" d-flex ">
                        <div class="w-75">
                            <label for="eAmnt">Amount</label>
                        </div>
                        <div>
                            <input name="expense[amount]" type="number" class="form-control" min="1" max="1000000"
                                id="eAmnt" placeholder="Amount" required>
                        </div>
                    </div>

                    <div class=" d-flex my-3 ">
                        <div class="w-75">
                            <label for="eDate">Date</label>
                        </div>
                        <div style="min-width: 200px;">
                            <input name="expense[date]" type="Datetime-local" class="form-control" id="eDate"
                                placeholder="Date" required>
                        </div>
                    </div>

                    <div class=" d-flex ">
                        <div class="w-75">
                            <label for="eCat">Category</label>
                        </div>
                        <div>
                            <select name="expense[category]" class="form-select" aria-label="Default select example">
                                <% for(let cat of categories){ %>
                                    <option value="<%= cat._id %>">
                                        <%= cat.name %>
                                    </option>
                                    <% } %>
                            </select>
                        </div>
                    </div>

                    <div class="d-flex mt-3" style="margin-left: 10rem;">
                        <div class="">
                            <button type="submit" class="btn btn-success">Add Expense</button>
                        </div>
                    </div>
                </form>
                <% } %>
                    </div>
                    </div>