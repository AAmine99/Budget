<% layout('/boilerplate') %>


        <div class="d-flex flex-column ">
            <%- include('../flash') %>
            <% if( categories.length >0  ){ %> 
                <table class="table table-hover" style="max-width: 25rem;">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Last modified</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let cat of categories){ %>
                            <tr>
                                <td>
                                    <%=cat.name %>
                                </td>
                                <td>
                                    <%= cat.lastModified.getDate() %>/<%= cat.lastModified.getMonth()+1 %>/<%=cat.lastModified.getFullYear()  %>  
                                </td>
                                <td>
                                    <div class="d-flex">
                                        <a class="btn btn-info me-2" href="/categories/<%= cat._id  %>/edit">
                                            <i class="fas fa-edit"></i></a>
                                        <form action="/categories/<%= cat._id  %>?_method=DELETE" method="POST">
                                            <button class="btn btn-danger " type="submit "><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
             <% }else{ %>
                <h5 class="card-title">No categories</h5> 
            <% } %> 

        </div>
